--creating a table
CREATE TABLE Department (
    DepartmentID INT,
    DepartmentName VARCHAR(100) 
);

--creating a table
CREATE TABLE Employee (
    EmployeeID INT,
    Name VARCHAR(100),
    DepartmentID INT,
    Salary INT
);

--inserting records
INSERT INTO Department (DepartmentID, DepartmentName) VALUES
(1, 'Human Resources'),
(2, 'Finance'),
(3, 'Engineering');

--inserting records
INSERT INTO Employee (EmployeeID, Name, DepartmentID, Salary) VALUES
(1, 'John Doe', 3, 75000),
(2, 'Jane Smith', 2, 68000),
(3, 'Mike Johnson', 1, 55000),
(4, 'Emily Davis', 3, 80000);
